{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "src/**/*.vue",
    // "src/**/*.d.ts",
    "types/**/*.d.ts",
    "components/*.ts",
    "components/**/*.ts",
    "components/**/*.vue",
    // "components.d.ts",
    // "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ],
  "compilerOptions": {
    "removeComments": true,
    "isolatedModules": true,
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "#/*": ["types/*"],
      "components/*": ["components/*"],
      "images/*": ["src/assets/images/*"],
      "less/*": ["src/assets/less/*"],
      "utils/*": ["src/utils/*"]
    }
  }
}
